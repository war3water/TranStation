{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 启动主程序",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: 运行 Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}
